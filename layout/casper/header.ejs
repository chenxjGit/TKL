<!-- ============================ Off-canvas navigation =========================== -->
<div class="sb-slidebar sb-right sb-style-overlay sb-momentum-scrolling">
    <div class="sb-close" aria-label="Close Menu" aria-hidden="true">
        <img src="<%- config.root %>img/close.png" alt="Close"/>
    </div>

    <div class="sb-overview">
        <div class="sb-author">
            <img src="<%- config.root %>img/headPhoto.png"/>
            <p><%= config.author %></p>
        </div>
        <div class="sb-list">
            <div class="sb-item">
                <a href="<%- config.root %><%- config.archive_dir %>">
                    <span class="sb-item-count"><%= site.posts.length %></span>
                    <span class="sb-item-name">日志</span>
                </a>
            </div>
            <div class="sb-item">
                <a href="javascript:void(0)">
                    <span class="sb-item-count"><%= wordcount(site) %></span>
                    <span class="sb-item-name">字数</span>
                </a>
            </div>
            <div class="sb-item">
                <a href="<%- config.root %><%- config.categories_dir %>">
                    <span class="sb-item-count"><%= site.categories.length %></span>
                    <span class="sb-item-name">分类</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Lists in Slidebars -->
    <ul class="sb-menu">
        <li><a href="<%- config.root %>" class="animsition-link" title="Home">主页</a></li>
        <li><a href="<%- config.root %><%- config.archive_dir %>" class="animsition-link" title="archive">归档</a>
        </li>

        <!-- Dropdown Menu -->
        <% if (site.categories.length){ %>
        <li>
            <a class="sb-toggle-submenu">分类<span class="sb-caret"></span></a>
            <ul class="sb-submenu">
                <% site.categories.sort('name').each(function(item){ %>
                <li><a href="<%- config.root %><%- item.path %>" class="animsition-link"><%= item.name %>
                        <small>(<%= item.posts.length %>)</small>
                    </a></li>
                <% }); %>
            </ul>
        </li>
        <% } %>
        <% if (site.tags.length){ %>
        <li>
            <a class="sb-toggle-submenu">标签<span class="sb-caret"></span></a>
            <ul class="sb-submenu">
                <% site.tags.sort('name').each(function(item){ %>
                <li><a href="<%- config.root %><%- item.path %>" class="animsition-link"><%= item.name %></a>
                </li>
                <% }); %>
            </ul>
        </li>
        <% } %>
        <% if (theme.links && theme.links.length){ %>
        <li>
            <a class="sb-toggle-submenu">友情链接<span class="sb-caret"></span></a>
            <ul class="sb-submenu">
                <% theme.links.forEach(function(item){ %>
                <li><a href="<%- item.link %>" class="animsition-link"><%= item.name %></a></li>
                <% }); %>
            </ul>
        </li>
        <% } %>
    </ul>

    <!-- Lists in Slidebars -->
    <ul class="sb-menu secondary">
        <li><a href="<%- config.root %><%- config.about_dir %>" class="animsition-link" title="about">关于</a></li>
    </ul>

    <!-- RSS -->
    <div class="sb-overview">
        <div class="sb-rss">
            <a href="<%- config.root %>atom.xml">RSS</a>
        </div>
    </div>

    <!-- more -->
    <ul class="sb-menu">
        <p>联系我</p>
        <p style="margin-bottom: 0; color: #999999"><%- theme.email %></p>
        <p style="color: #999999"><%- theme.address %></p>
    </ul>
</div>
<!-- ============================ END Off-canvas navigation =========================== -->

<!-- ============================ #sb-site Main Page Wrapper =========================== -->
<div id="sb-site">
    <!-- #sb-site - All page content should be contained within this id, except the off-canvas navigation itself -->
    <!-- ============================ Header & Logo bar =========================== -->
    <div id="navigation" class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <!-- Nav logo -->
                <div class="logo">
                    <a href="/" title="Logo" class="animsition-link">
                        <% if (theme.logo) { %>
                        <img src="<%- theme.logo %>" alt="Logo" width="35px;"/>
                        <% } %>
                    </a>
                </div>
                <!-- // Nav logo -->
                <!-- Info-bar -->
                <nav>
                    <ul class="nav">
                        <li><a href="/" class="animsition-link"><%- config.title %></a></li>
                        <li class="nolink"><span>Always </span>Creative.</li>
                        <li><a href="<%- config.root %><%- config.archive_dir %>" title="archive">归档</a></li>
                        <li><a href="<%- config.root %><%- config.category_dir %>" title="category">目录</a></li>
                        <li><a href="<%- config.root %><%- config.tag_dir %>" title="tag">标签</a></li>
                        <li><a href="<%- config.root %><%- config.message_dir %>" title="message">留言板</a></li>
                        <% if(theme.github){ %>
                        <li><a href="<%- theme.github %>" title="Github" target="_blank"><i
                                        class="icon-Popular_GitHub"></i></a></li>
                        <% } %>
                        <% if(theme.twitter){ %>
                        <li><a href="<%- theme.twitter %>" title="Twitter" target="_blank"><i
                                        class="icon-Popular_Twitter"></i></a></li>
                        <% } %>
                        <% if(theme.facebook){ %>
                        <li><a href="<%- theme.facebook %>" title="Facebook" target="_blank"><i
                                        class="icon-Popular_Facebook"></i></a></li>
                        <% } %>
                        <% if(theme.weibo){ %>
                        <li><a href="<%- theme.weibo %>" title="Sina-Weibo" target="_blank"><i
                                        class="icon-CN_sina_weibo"></i></a></li>
                        <% } %>
                        <% if(theme.zhihu){ %>
                        <li><a href="<%- theme.zhihu %>" title="Zhihu" target="_blank"><i
                                        class="icon-CN_zhihu"></i></a></li>
                        <% } %>
                        <% if(theme.douban){ %>
                        <li><a href="<%- theme.douban %>" title="Douban" target="_blank"><i
                                        class="icon-CN_douban"></i></a></li>
                        <% } %>
                        <% if(theme.instagram){ %>
                        <li><a href="<%- theme.instagram %>" title="Instagram" target="_blank"><i
                                        class="icon-Popular_Instagram"></i></a></li>
                        <% } %>
                        <% if(theme.google){ %>
                        <li><a href="<%- theme.google %>" title="Google" target="_blank"><i
                                        class="icon-google-plus"></i></a></li>
                        <% } %>
                        <li class="nolink"><span>Welcome!</span></li>
                    </ul>
                </nav>
                <!--// Info-bar -->
            </div>
            <!-- // .container -->
            <div class="learnmore sb-toggle-right">More</div>
            <button type="button" class="navbar-toggle menu-icon sb-toggle-right" title="More">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar before"></span>
                <span class="icon-bar main"></span>
                <span class="icon-bar after"></span>
            </button>
        </div>
        <!-- // .navbar-inner -->
    </div>

    <!-- ============================ Header & Logo bar =========================== -->

