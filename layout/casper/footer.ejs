<!-- ============================ Footer =========================== -->
<footer>
    <div class="container">
        <div class="copy">
            <p>
                &copy; 2014
                <script>new Date().getFullYear() > 2010 && document.write("- " + new Date().getFullYear());</script>
                , Content By <%- config.author %>. All Rights Reserved.
            </p>
            <p>Theme By <a href="http://chenxjGit.github.io" style="color: #767D84">Chenxj</a></p>
        </div>
        <div class="social">
            <ul>
                <% if(theme.github){ %>
                <li><a href="<%- theme.github %>" title="Github" target="_blank"><i class="icon-Popular_GitHub"></i></a>&nbsp;
                </li>
                <% } %>
                <% if(theme.twitter){ %>
                <li><a href="<%- theme.twitter %>" title="Twitter" target="_blank"><i class="icon-Popular_Twitter"></i></a>&nbsp;
                </li>
                <% } %>
                <% if(theme.facebook){ %>
                <li><a href="<%- theme.facebook %>" title="Facebook" target="_blank"><i
                                class="icon-Popular_Facebook"></i></a></li>
                <% } %>
                <% if(theme.weibo){ %>
                <li><a href="<%- theme.weibo %>" title="Sina-Weibo" target="_blank"><i
                                class="icon-CN_sina_weibo"></i></a></li>
                <% } %>
                <% if(theme.zhihu){ %>
                <li><a href="<%- theme.zhihu %>" title="Zhihu" target="_blank"><i class="icon-CN_zhihu"></i></a></li>
                <% } %>
                <% if(theme.douban){ %>
                <li><a href="<%- theme.douban %>" title="Douban" target="_blank"><i class="icon-CN_douban"></i></a></li>
                <% } %>
                <% if(theme.instagram){ %>
                <li><a href="<%- theme.instagram %>" title="Instagram" target="_blank"><i
                                class="icon-Popular_Instagram"></i></a></li>
                <% } %>
                <% if(theme.google){ %>
                <li><a href="<%- theme.google %>" title="Google-Plus" target="_blank"><i
                                class="icon-google-plus"></i></a></li>
                <% } %>
            </ul>
        </div>
        <div class="clearfix"></div>
    </div>
</footer>
<!-- ============================ END Footer =========================== -->